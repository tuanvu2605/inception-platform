doctype html
head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    // Bootstrap CSS
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css' integrity='sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk' crossorigin='anonymous')
    link(href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet')
    script(src='https://code.jquery.com/jquery-3.5.0.js')
    link(rel='stylesheet' href='/css/style.css')
    title #{ad.title}
.container-fluid
    .header
        .row.no-gutters
            .col-3.icon
                img(src=ad.thumb alt='')
            .col-8.pl-3.txt
                h5.title
                    | #{ad.title}
                img(src='/images/etsy.png' alt='')
                .vote
                    img(src='/images/star.png' alt='')
                    img(src='/images/star.png' alt='')
                    img(src='/images/star.png' alt='')
                    img(src='/images/star.png' alt='')
                    img(src='/images/star-black.png' alt='')
                    - var number = Math.floor(Math.random() * 100) + 1000
                    p(style='padding: 5px 0px 0px 0px') (#{number})
    .body
        div
            each val in ad.images
                img.mySlides(src=val style='width:100%')
        p.text-center.mt-4.mb-4
            |#{ad.description}
        .text-center
            a.button(href=ad.url target='_blank') Open
    .footer
script(src='/js/full.js')
